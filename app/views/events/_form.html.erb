   <%= form_for event do |f| %>
   <div>
       <%= f.label :title, 'Title' %>
   </div>
   <div>
       <%= f.text_field :title %>
   </div>

   <div>
       <%= f.label :date, 'Date' %>
   </div>
   <div>
       <%= f.date_field :date %>
   </div>

   <div>
       <%= f.label :description, 'Description' %>
   </div>
   <div>
       <%= f.text_area :description %>
   </div>
   <div>
       <%= f.submit "Submit", :class => "btn-primary"%>
   </div>
   <% end %>