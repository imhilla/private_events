<div>
    <h1>
        <%= @event.title %><br>
    </h1>
    <h2> Created by <%= @event.creator.username %><br>
    </h2>
    <% if @event.attendees.count.zero? %>

    <h3>
        There is no any attendee for this party
    </h3>
    <% else %>
    <h3>Attendees of this event:</h3>
    <% @event.attendees.each_with_index do | attendee, index | %>
    <h4>
        <%= attendee.username %>
    </h4>
    <br>
    <% end %><br>
    <% end %>
</div>